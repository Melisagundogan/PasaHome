 
@model IEnumerable<PasaHome.Models.Data.Product>


@{

    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    

}





 <div class="col-md-9">
<div class="row cards-container mt-5 d-flex flex-wrap">
    @foreach (var product in Model)
    {
        <div class="col-md-4 d-flex align-items-strech">
            <div class="card mb-4 card-custom flex-grow-1">
            <img class="card-img-top" src="~/Img/@product.img" alt="-" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @product.Price.ToString("C")</p>
                    <p class="card-text">Color: @product.color</p>
                    <p class="card-text">Category: @product.CategoryName</p>
                    <a href="@Url.Action("Pay","Product",new{ıd=product.Id})" class="btn btn-primary">Sepete Ekle</a>
                    
                </div>
            </div>
         </div>
    }
  </div>
</div>
</div>
 